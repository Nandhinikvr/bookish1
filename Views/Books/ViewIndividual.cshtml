@using Bookish.Models.Data;
@model Book;

@{
    ViewData["Title"] = @Model.Title;
}

<div class="text-center">
    <h1 class="display-4">@Model.Title</h1>
    <h2>By @Model.Author</h2>
    <p>Number of copies: @Model.Copies.Count</p>
    <P>To update a book please click the Link</P>
    <a asp-area="" asp-controller="Books" asp-action="EditBook" asp-route-id="@Model.Id">Edit book</a>
    <P>To add a copy of this book, please click the Link</P>
    <a asp-area="" asp-controller="Books" asp-action="AddCopy" asp-route-id="@Model.Id">Add a new copy</a>
 </div>
